<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/v1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#9B979F"
        android:gravity="center"
        android:text="1"
        android:textSize="25dp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/v2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/v1"
        android:layout_toRightOf="@id/v1"
        android:background="#889C9A"
        android:gravity="center"
        android:text="2"
        android:textSize="25dp" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/v3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/v2"
        android:layout_toLeftOf="@id/v2"
        android:layout_alignParentLeft="true"
        android:background="#E48E8E"
        android:gravity="center"
        android:text="3"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/vv"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/v3"
        android:layout_toRightOf="@id/v3"
        android:background="#857E7E"
        android:gravity="center" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/v4"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_below="@id/v3"
        android:layout_alignRight="@id/v3"
        android:layout_alignParentLeft="true"
        android:background="#3E3030"
        android:gravity="center"
        android:text="4"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/v5"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_below="@id/vv"
        android:layout_alignRight="@id/vv"
        android:layout_toRightOf="@id/v4"
        android:background="#0277BD"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/v6"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_below="@id/v5"
        android:layout_alignRight="@id/v5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#171A2E"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/v7"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_below="@id/v5"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/v6"
        android:background="#2E7D32"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="25dp" />




</RelativeLayout>